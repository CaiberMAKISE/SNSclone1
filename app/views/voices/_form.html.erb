<%= form_with(model: @voice, local: true, url: confirm_voices_path) do |form| %>
  <% if @voice.errors.any? %>
    <div id="error_explanation">
      <h2><%= @voice.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @voice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to "発言一覧画面にもどる", voices_path %>